# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                           controllers.ProductController.index

GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /products                   controllers.ProductController.getAll
POST    /product                    controllers.ProductController.add
GET     /product/:id                controllers.ProductController.getById(id: Integer)
PUT     /product/:id                controllers.ProductController.update(id: Integer)

GET     /categories                 controllers.CategoryController.getAll
POST    /category                   controllers.CategoryController.add
GET     /category/:id               controllers.CategoryController.getById(id: Integer)
PUT     /category/:id               controllers.CategoryController.update(id: Integer)

GET     /purchases                  controllers.PurchaseController.getAll
POST    /purchase                   controllers.PurchaseController.add
GET     /purchase/:id               controllers.PurchaseController.getById(id: Integer)
PUT     /purchase/:id               controllers.PurchaseController.update(id: Integer)

GET     /admins                  controllers.AdminController.getAll
POST    /register_admin          controllers.AdminController.register
GET     /admin/:id               controllers.AdminController.getById(id: Integer)
PUT     /admin/:id               controllers.AdminController.update(id: Integer)
POST    /login                   controllers.AdminController.login

GET     /users                   controllers.UserController.getAll
POST    /register_user           controllers.UserController.register
GET     /user/:id                controllers.UserController.getById(id: Integer)
PUT     /user/:id                controllers.UserController.update(id: Integer)
POST    /login                   controllers.UserController.login

GET     /sales                   controllers.SaleController.getAll
POST    /sales                   controllers.SaleController.add
GET     /sales/:id               controllers.SaleController.getById(id: Integer)
PUT     /sales/:id               controllers.SaleController.update(id: Integer)

